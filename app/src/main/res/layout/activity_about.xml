<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context="com.yazidmf.waktusholat.AboutApp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true" />

                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="65dp"
                            app:srcCompat="@mipmap/ic_launcher_round" />

                        <TextView
                            android:id="@+id/rs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/logo"
                            android:layout_marginLeft="10dp"
                            android:text="Waktu Sholat"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            app:fontFamily="casual"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/copyright"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rs"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:text="Â© 2018 Yazid M.F."
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            app:fontFamily="casual"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/copyright"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:text="All rights reserved."
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            app:fontFamily="casual"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/versi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/all"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:text="Version: 1.0 Beta"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            app:fontFamily="casual"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/penjelasan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/versi"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:text="Waktu Sholat Jakarta hadir untuk seluruh kaum muslimin di wilayah DKI Jakarta dan sekitarnya."
                            android:textColor="@android:color/black"
                            app:fontFamily="casual"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/perhatian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/penjelasan"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:text="PERHATIAN:"
                            android:textAllCaps="true"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            app:fontFamily="casual"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/satu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/perhatian"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="1. Fitur utama Aplikasi Waktu Sholat Jakarta adalah menampilkan Waktu Sholat wilayah DKI Jakarta dan sekitarnya serta menggunakan paket data internet."
                            android:textColor="@android:color/black"
                            app:fontFamily="casual"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/dua"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/satu"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="2. Aplikasi Waktu Sholat Jakarta Bisa berjalan mulai dari Android API 14 (IceCreamSandwich) hingga API 28 (Pie)."
                            android:textColor="@android:color/black"
                            app:fontFamily="casual"
                            android:textSize="18sp" />
                </RelativeLayout>
        </ScrollView>
</RelativeLayout>